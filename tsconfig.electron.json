{
  "compilerOptions": {
    "module": "nodenext",
    "lib": ["dom", "es2021"],
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"] 
    }
  },
  "include": ["electron/**/*"]
}
